<h1>Listing events</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Site</th>
    <th>Owner</th>
    <th>Start at</th>
    <th>End at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.body %></td>
    <td><%= event.site %></td>
    <td><%= event.owner %></td>
    <td><%= event.start_at %></td>
    <td><%= event.end_at %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

